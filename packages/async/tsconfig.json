{
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/test.ts",
    "src/**/*.test.tsx",
    "src/**/test.tsx"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true
  }
}
